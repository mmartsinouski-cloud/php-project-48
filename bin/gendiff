#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use Docopt\Handler;
use function Hexlet\Code\genDiff;

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$handler = new Handler(['optionsFirst' => true]);
$result = $handler->handle($doc, array_slice($argv, 1));

if ($result['--help']) {
    echo $doc;
    exit(0);
}

if ($result['--version']) {
    echo "1.0.0\n";
    exit(0);
}

if (isset($result['<firstFile>']) && isset($result['<secondFile>'])) {
    $firstFile = $result['<firstFile>'];
    $secondFile = $result['<secondFile>'];

    try {
        $diff = genDiff($firstFile, $secondFile);
        echo $diff . "\n";
    } catch (\Exception $e) {
        echo "Ошибка: " . $e->getMessage() . "\n";
        exit(1);
    }

    exit(0);
}

// Если неправильное использование
echo $doc;
exit(1);
